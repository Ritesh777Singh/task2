//   Calculate compound interest (Compound Interest formula: a. Formula to calculate compound interest annually is given by: Amount= P(1 + R/100)t b. Compound Interest = Amount â€“ P    
#include <stdio.h>
#include <math.h>

int main() {
 float amount,principal,rate,time,ci;
 printf("enter the amount : ");
 scanf("%f",&principal);
 printf("enter the rate : ");
 scanf("%f",&rate);
  printf("enter the numberof time : ");
 scanf("%f",&time);
 amount=principal*pow(1+rate/100,time);
 printf("amount :%f\n",amount);
 ci=amount-principal;
 printf("compound interest :%f",ci);
    return 0;
}
